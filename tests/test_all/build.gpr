with "libsparkcrypto";
with "SPARKUnit";

project Build
is
   for Source_Dirs use (".");
   for Object_Dir use "out";
   for Main use ("main.adb");

   package Linker is
      for Default_Switches ("Ada") use ("--gc-sections");
   end Linker;

   package Compiler is
      for Default_Switches ("Ada") use ("-ffunction-sections", "-fdata-sections", "-Winline", "-gnatN", "-fomit-frame-pointer", "-gnatp", "-gnatwe");
      for Switches ("spark_io.ads") use ("-gnatwa", "-gnatwe", "-gnat95", "-gnatwY", "-gnatwC");
   end Compiler;

end Build;
